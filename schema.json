{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "action": {
      "default": "wrap",
      "type": "string",
      "enum": ["wrap", "unwrap"]
    },
    "input": {
      "type": "string",
      "pattern": "\\.(js|jsx|ts|tsx)$"
    },
    "target": {
      "type": "string"
    },
    "exclude": {
      "default": "",
      "type": "string"
    },
    "importPath": {
      "type": "string"
    },
    "targetComponent": {
      "default": "",
      "type": "string"
    },
    "props": {
      "default": "",
      "type": "string"
    },
    "overwrite": {
      "default": false,
      "type": "boolean"
    }
  },
  "required": ["action", "input", "target", "exclude", "importPath", "targetComponent", "props", "overwrite"],
  "additionalProperties": false
}
